{
  "compilerOptions": {
    "rootDirs": ["test","src"],
    "outDir": "lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
